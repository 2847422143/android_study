<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="vertical">

    <!-- 原有LinearLayout作为ScrollView的唯一子View（ScrollView只能有一个直接子View） -->
    <!--<com.example.android_study.Event.InterceptLinearLayout  事件分发测试用-->
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <!-- 按钮0：触摸事件 -->
        <Button
            android:id="@+id/btn_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="触摸事件" />

        <!-- 按钮1：触发观察者模式 -->
        <Button
            android:id="@+id/btn_observer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="观察者模式测试" />

        <!-- 按钮2：触发ContentProvider操作 -->
        <Button
            android:id="@+id/btn_content_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ContentProvider通信" />

        <!-- 按钮3：触发SharedPreferences操作 -->
        <Button
            android:id="@+id/btn_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="SharedPreferences操作" />

        <!-- 按钮4：触发AIDL通信 -->
        <Button
            android:id="@+id/btn_aidl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="AIDL跨进程通信" />

        <!-- 按钮5：触发Message通信 -->
        <Button
            android:id="@+id/btn_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Message跨进程通信" />

        <!-- 按钮6：触发广播 -->
        <Button
            android:id="@+id/btn_localbroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="广播触发" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-------- 以下是大模型对接 --------"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="请输入你要提问的内容"
            android:minLines="3"/>

        <!-- 按钮7：星火大模型 -->
        <Button
            android:id="@+id/btn_XFS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="星火大模型" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

    </LinearLayout><!--</com.example.android_study.Event.InterceptLinearLayout>-->
</ScrollView>